{
    "name": "TrulyLive Chrome Controller",
    "version": "1.0.0",
    "description": "Remote Control of Chrome from vMix Controller",
    "manifest_version": 3,
    "author": "Carl Meek",
    "action":{
        "default_popup": "index.html",
        "default_title": "TrulyLive Chrome Controller"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "options_page": "settings.html",
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["<all_urls>"]
    }],
    "web_accessible_resources": [
    {
        "resources": ["foreground.js"],
        "matches": ["<all_urls>"]
    }
    ],
    "permissions": ["webRequest", "webNavigation","tabs","activeTab","scripting"],
    "host_permissions": [
        "*://*/*"
    ]
}